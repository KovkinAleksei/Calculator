<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/dark"
    >

    <TextView
        android:id="@+id/appName"
        android:layout_width="380dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/app_name"
        android:textColor="@color/appNameColor"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"

        android:fontFamily="sans-serif-medium"
        android:text="@string/result"
        android:textColor="@color/resultColor"
        android:textSize="57sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="14dp"
        app:dividerColor="@color/dividerColor"
        app:layout_constraintBottom_toTopOf="@+id/materialButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <!--first row -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"

        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="AC"
        android:textSize="32sp"

        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/materialButton5"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="±"

        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/materialButton6"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/materialButton1"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="%"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/materialButton7"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/materialButton2"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/accentButtonColor"
        android:fontFamily="sans-serif-medium"
        android:text="÷"

        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/materialButton8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/materialButton3"
        app:layout_constraintWidth_percent="0.2" />

    <!-- second row -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"

        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="7"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/materialButton9"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="8"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/materialButton10"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/materialButton1"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="9"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/materialButton11"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/materialButton6"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton8"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/accentButtonColor"
        android:fontFamily="sans-serif-medium"
        android:text="-"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/materialButton12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/materialButton7"
        app:layout_constraintWidth_percent="0.2" />

    <!-- third row -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"

        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="4"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/materialButton13"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="5"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/materialButton14"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/materialButton9"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="6"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/materialButton15"
        app:layout_constraintHeight_percent="0.11"
