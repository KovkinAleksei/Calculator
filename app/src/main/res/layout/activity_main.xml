<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/dark"
    >

    <TextView
        android:id="@+id/appName"
        android:layout_width="380dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/app_name"
        android:textColor="@color/appNameColor"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"

        android:fontFamily="sans-serif-medium"
        android:text="@string/result"
        android:textColor="@color/resultColor"
        android:textSize="57sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:dividerColor="@color/dividerColor"
        app:layout_constraintBottom_toTopOf="@+id/plusMinusButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <!--first row -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resetButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:maxLines="1"

        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="AC"
        android:textSize="30sp"

        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/plusMinusButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="±"

        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/resetButton"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/percentButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="%"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/plusMinusButton"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/divideButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/accentButtonColor"
        android:fontFamily="sans-serif-medium"
        android:text="÷"

        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/multiplyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/percentButton"
        app:layout_constraintWidth_percent="0.2" />

    <!-- second row -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"

        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="7"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="8"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="9"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/multiplyButton"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/accentButtonColor"
        android:fontFamily="sans-serif-medium"
        android:text="×"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/minusButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintWidth_percent="0.2" />

    <!-- third row -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"

        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="4"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="5"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="6"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/minusButton"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/accentButtonColor"
        android:fontFamily="sans-serif-medium"
        android:text="-"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/plusButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintWidth_percent="0.2" />

    <!-- fourth row -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"

        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="1"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="2"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="3"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/commaButton"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/plusButton"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:backgroundTint="@color/accentButtonColor"
        app:cornerRadius="28dp"
        android:text="+"
        android:textSize="32sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/equalsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintWidth_percent="0.2" />

    <!-- fifth row -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button0"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="0"
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.44" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/commaButton"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text=","
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/equalsButton"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/accentButtonColor"
        android:fontFamily="sans-serif-medium"
        android:text="="
        android:textSize="32sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toEndOf="@+id/commaButton"
        app:layout_constraintWidth_percent="0.2" />

    <ImageButton
        android:id="@+id/eraseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/whitevector"
        android:backgroundTint="@color/dark"
        app:layout_constraintBottom_toTopOf="@+id/materialDivider"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>