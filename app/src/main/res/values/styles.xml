<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "buttonStyle" parent="@style/Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="backgroundTint">@color/buttonColor</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">32sp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name = "accentButtonStyle" parent="@style/buttonStyle">
        <item name="backgroundTint">@color/accentButtonColor</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>


</resources>